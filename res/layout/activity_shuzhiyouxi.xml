<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/a1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/a2" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/a3" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/a4" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/a5" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="20dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="5" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/a6" />

            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/a7" />

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/a8" />

            <ImageView
                android:id="@+id/imageView34"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/a9" />

            <ImageView
                android:id="@+id/imageView35"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="20dp" >

            <TextView
                android:id="@+id/textView31"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="6" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="7" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="8" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="9" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/daojishitv"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:text="停止信号倒计时:0s"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" >

        <TextView
            android:id="@+id/indextv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/a1" />

         <ImageView
            android:id="@+id/imageView66"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/jiahao" />

         <TextView
             android:id="@+id/num2"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="0" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="50dp"
            android:layout_height="40dp"
              android:layout_marginLeft="5dp"
            android:src="@drawable/a2" />

       <ImageView
            android:id="@+id/imageView77"
            android:layout_width="50dp"
            android:layout_height="40dp"
              android:layout_marginLeft="5dp"
            android:src="@drawable/jianhao" />

       <TextView
           android:id="@+id/num3"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="0" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="50dp"
            android:layout_height="40dp"
              android:layout_marginLeft="5dp"
            android:src="@drawable/a3" />
    </LinearLayout>

    <LinearLayout
         android:id="@+id/LinearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
         android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center" >

         <ImageView
            android:id="@+id/imageView88"
            android:layout_width="50dp"
            android:layout_height="40dp"
              android:layout_marginLeft="5dp"
            android:src="@drawable/dengyuhao" />

         <TextView
             android:id="@+id/num4"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="0" />

        <EditText
            android:id="@+id/shurujieguo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:padding="5dip"
            android:singleLine="true"
            android:textSize="15sp" >

       
        </EditText>

        <Button
            android:id="@+id/tjbtn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/btn"
            android:text="提  交"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>